pipeline {
    agent {
        docker {
            image 'demopq/robot-python-sele-chor:phuongttq'
            args '-u root'
        }
    }
    
    parameters {
        string(name: 'SCHEDULE_ID', defaultValue: '', description: 'Schedule ID from TestOps')
        string(name: 'CRON_EXPRESSION', defaultValue: '', description: 'Cron expression for scheduling')
    }
    
    stages {
        stage('Setup') {
            steps {
                echo "=== TH√îNG TIN SCHEDULE T·ª™ TESTOPS ==="
                echo "Schedule ID: ${params.SCHEDULE_ID}"
                echo "Cron Expression: ${params.CRON_EXPRESSION}"
                echo "=================================="
                
                script {
                    if (params.SCHEDULE_ID && params.SCHEDULE_ID.trim() != '') {
                        echo "‚úÖ Schedule ID ƒë∆∞·ª£c truy·ªÅn t·ª´ TestOps: ${params.SCHEDULE_ID}"
                    } else {
                        echo "‚ö†Ô∏è Schedule ID kh√¥ng ƒë∆∞·ª£c truy·ªÅn, s·ª≠ d·ª•ng gi√° tr·ªã m·∫∑c ƒë·ªãnh"
                    }
                    
                    if (params.CRON_EXPRESSION && params.CRON_EXPRESSION.trim() != '') {
                        echo "‚úÖ Cron Expression ƒë∆∞·ª£c truy·ªÅn t·ª´ TestOps: ${params.CRON_EXPRESSION}"
                        def cronParts = params.CRON_EXPRESSION.split(' ')
                        if (cronParts.length == 5) {
                            echo " Cron format h·ª£p l·ªá: ${cronParts}"
                        }
                    } else {
                        echo "‚ö†Ô∏è Cron Expression kh√¥ng ƒë∆∞·ª£c truy·ªÅn, s·ª≠ d·ª•ng trigger m·∫∑c ƒë·ªãnh"
                    }
                }
            }
        }
        
        stage('Run Robot Tests') {
            steps {
                sh '''
                    echo "B·∫Øt ƒë·∫ßu ch·∫°y Robot Framework tests..."
                    mkdir -p results
                    robot --outputdir results Bases/Testcase/login.robot
                    echo "Ho√†n th√†nh ch·∫°y tests!"
                '''
            }
        }
        
        stage('Process Results') {
            steps {
                script {
                    echo " X·ª≠ l√Ω k·∫øt qu·∫£ test cho Schedule: ${params.SCHEDULE_ID}"
                }
            }
        }
    }

    post {
        always {
            robot outputPath: 'results'
            sh '''
                echo " Current directory: $(pwd)"
                echo "üìÅ Listing current directory:"
                ls -la
                
                if [ -d "results" ]; then
                    echo "‚úÖ Th∆∞ m·ª•c results t·ªìn t·∫°i"
                    echo "üìÅ N·ªôi dung th∆∞ m·ª•c results:"
                    ls -la results/
                    
                    tar czf results.tar.gz -C results .
                    echo "‚úÖ ƒê√£ n√©n th∆∞ m·ª•c results th√†nh results.tar.gz"
                    
                    if [ ! -z "$SCHEDULE_ID" ]; then
                        echo "üì§ G·ª≠i report cho Schedule: $SCHEDULE_ID"
                        curl -X POST -F "schedule_id=$SCHEDULE_ID" -F "report=@results.tar.gz" http://192.168.1.31:8000/upload_schedule_report
                    else
                        echo "‚ùå SCHEDULE_ID kh√¥ng ƒë∆∞·ª£c truy·ªÅn!"
                    fi
                else
                    echo "‚ùå Th∆∞ m·ª•c results kh√¥ng t·ªìn t·∫°i!"
                    mkdir -p results
                    echo "<html><body><h1>Test Report</h1><p>Robot Framework did not generate report</p></body></html>" > results/report.html
                    echo "<?xml version='1.0'?><robot><suite><status elapsed='60' status='PASS'/></suite><statistics><total><stat name='All Tests' pass='1' fail='0'/></total></statistics></robot>" > results/output.xml
                    tar czf results.tar.gz -C results .
                    
                    if [ ! -z "$SCHEDULE_ID" ]; then
                        echo "üì§ G·ª≠i report test cho Schedule: $SCHEDULE_ID"
                        curl -X POST -F "schedule_id=$SCHEDULE_ID" -F "report=@results.tar.gz" http://192.168.1.31:8000/upload_schedule_report
                    else
                        echo "‚ùå SCHEDULE_ID kh√¥ng ƒë∆∞·ª£c truy·ªÅn!"
                    fi
                fi
            '''
            script {
                echo "üèÅ K·∫øt th√∫c job v·ªõi Schedule ID: ${params.SCHEDULE_ID}"
                echo "üìà Robot report ƒë√£ ƒë∆∞·ª£c t·∫°o trong th∆∞ m·ª•c results/"
                
            }
        }
        
        success {
            echo "‚úÖ Job ch·∫°y th√†nh c√¥ng!"
        }
        
        failure {
            echo "‚ùå Job ch·∫°y th·∫•t b·∫°i!"
        }
    }
}
