pipeline {
    agent {
        docker {
            image 'demopq/robot-python-sele-chor:phuongttq'
            args '-u root'
        }
    }

    stages {
        stage('Run Robot Tests') {
            steps {
                sh '''
                    mkdir -p results
                    robot --outputdir results Bases/Testcase/login.robot
                '''
            }
        }
    }

    post {
        always {
            script {
                // ✅ Phân tích kết quả Robot Framework
                robot outputPath: 'results'

                // ✅ Gửi report về backend (sử dụng plugin HTTP Request)
                httpRequest(
                    url: 'http://localhost:8000/api/reports/jenkins/save-plan-report/1',
                    httpMode: 'POST',
                    contentType: 'APPLICATION_JSON',
                    requestBody: '{"plan_id": 1, "jenkins_job": "TestTrigger"}'
                )
            }
        }
    }
}
